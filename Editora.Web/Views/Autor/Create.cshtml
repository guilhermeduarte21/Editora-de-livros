@model Editora.Web.Models.Autor.FormAutorViewModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/signin.css" />

<div class="div-login text-center">
    <form class="form-signin" asp-action="Create" asp-controller="Autor">
        <h1 class="h3 mb-3 font-weight-normal">Novo Autor</h1>

        <label for="Nome" class="sr-only">Nome</label>
        <input type="text" name="Nome" class="form-control" placeholder="Nome" required autofocus />

        <label for="UltimoNome" class="sr-only">UltimoNome</label>
        <input type="text" name="UltimoNome" class="form-control" placeholder="UltimoNome" required autofocus />

        <label for="Email" class="sr-only">Email</label>
        <input type="email" name="Email" class="form-control" placeholder="Email" required autofocus />

        <label for="DataNascimento" class="sr-only">DataNascimento</label>
        <input type="date" name="DataNascimento" class="form-control" placeholder="DataNascimento" required />

        <button class="btn btn-lg btn-primary btn-block" type="submit">Criar</button>
        <div asp-validation-summary="All" class="text-danger mt-5 mb-3"></div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
